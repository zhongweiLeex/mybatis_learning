<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- dtd 是xml文件语法的约束文件-->


<!--Session工厂配置文件-->
<configuration>
    <settings>
        <setting name="jdbcTypeForNull" value="NULL"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!--开启输出mybatis日志-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <!--开启全局缓存设置-->
        <setting name="cacheEnabled" value="true" />
    </settings>



    <typeAliases>
        <package name="com.lzw.pojo"/><!--为这个包下的所有类起别名，默认小写-->
    </typeAliases>


    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/mybatis_test?useSSL=true&amp;useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC"/>
                <property name="username" value="root"/>
                <property name="password" value="@lz15195248827"/>
            </dataSource>
        </environment>


        <!--
            <environment id="dev_oracle">
                <transactionManager type="JDBC"/>
                <dataSource type="POOLED">
                    <property name="driver" value="com.oracel"/>
                </dataSource>
            </environment>
        -->
    </environments>
    <databaseIdProvider type="DB_VENDOR">
        <property name="MySQL" value="mysql"/>
    </databaseIdProvider>
<!--    每个Mapper.xml都需要在Mybatis核心配置文件中注册-->
    <mappers>
        <mapper resource="com/lzw/dao/UserMapper.xml" />
    </mappers>
</configuration>